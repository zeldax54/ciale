{% extends 'gemaBundle::clientlayout.html.twig' %}

  {% block customstylesheets %}
      {#<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">#}
      <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
      <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
      <!------ Include the above in your HEAD tag ---------->

      <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
      <script src="https://use.fontawesome.com/5a8a7bb461.js"></script>
      <style>

          *{
              font-family: 'Poppins', sans-serif;
          }
          .testimonial_subtitle{
              color: #0aaa7a;
              font-size: 12px;
          }
          .testimonial_btn{
              background-color: #373d4b !important;
              color: #fff !important;
          }
          .seprator {
              height: 2px;
              width: 56px;
              background-color: #0aaa7a;
              margin: 7px 0 10px 0;
          }
          @media only screen and (max-width: 700px) {
              .texcontainter {
                  text-align: center !important;

              }
              .titlecontainer{
                  margin-top: -4px;

              }
              .imgrem{
                  max-width: 100% !important;
                  float:none !important;
              }
              .marquer{
                  margin-top: 10px !important;
              }

          }
          
          li a{
              font-size: 14px !important;
          }

      </style>




  {% endblock %}


  {% block content %}

      <div class="container" style="text-align: center;margin:  0 auto">
          <div class="row" style="text-align: center">
              <div class="col-sm-12">
                  <h3><strong>Remates Auspiciados</strong></h3>
                  <div class="seprator"></div>
                  <div >
                      <!-- Wrapper for slides -->

                      <div class="">
                          {% for remate in remates %}

                       <div class="row">
                                          <div class="col-sm-7">
                                              <img  src="{{ asset(remate.imgprincipal) }}"  class="imgrem" style="max-width: 100%;float: right">
                                          </div><br>

                                          <div class="col-sm-4 marquer">
                                              <div class="row">
                                                  <div class="titlecontainer">
                                              <h4 class="" style="font-size: 24px"><strong>{{ remate.nombre }}</strong></h4>
                                                  </div>

                                              <div class="texcontainter" style="text-align: left ">


                                              <span><strong>Fecha:  </strong></span><span>{{ remate.fecha|date("d/m/Y") }}</span><br>
                                              {% if remate.localidad is not null %}
                                                  <span><strong>Localidad:  </strong></span><span>{{ remate.localidad }}</span><br>
                                              {% endif %}

                                              {% if remate.provincia is not null %}
                                                  <span><strong>Provincia:  </strong></span><span>{{ remate.provincia }}</span><br>
                                              {% endif %}

                                              {% if remate.sitioweb is not null %}
                                                  <span><a href="{{ remate.linksitioweb }}" target="_blank"><strong>{{ remate.sitioweb }}</strong></a></span><br>
                                              {% endif %}

                                              {% if remate.contacto is not null %}
                                                  <span><strong>Contacto:  </strong></span><span>{{ remate.contacto }}</span><br>
                                              {% endif %}

                                              {% if remate.Linkflyer is not null %}
                                                  <span><a href="{{ remate.Linkflyer }}" target="_blank"><strong>Flyer</strong></a></span><br>
                                              {% endif %}

                                              {% if remate.linkcatalogo is not null %}
                                                  <span><a href="{{ remate.linkcatalogo }}" target="_blank"><strong>Cat√°logo</strong></a></span><br>
                                              {% endif %}
                                              </div>
                                              </div>

                                          </div>

                                      </div>

                      </div>
                      <br><br>

                          {% endfor %}


                      </div>
                  </div>


              </div>
          </div>
      </div>


          {% endblock %}


 {% block custom_javascripts %}
     <script>
         $(document).ready(function(){
             $('.dropdown-toggle').dropdown()
         });
     </script>


 {% endblock %}