    {% extends 'gemaBundle::layout.html.twig' %}

    {% block gema_page -%}
    <h2>Noticia</h2>

    <div class="table-responsive">
        <table class="record_properties table table-hover">
            <thead>
                <tr>                                                                <th>Titulo</th>
                                                                    <th>Introduccion</th>
                                                                    <th>Cuerpo</th>
                                                                    <th>Fechanoticia</th>
                                                                    <th>Publico</th>
                                                                    <th>Guid</th>
                        
                    <th colspan="3">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>                                        
                        <td>{{ entity.titulo }}</td>
                                        
                        <td>{{ entity.introduccion }}</td>
                                        
                        <td>{{ entity.cuerpo }}</td>
                                        
                        <td>{{ entity.fechanoticia|date('Y-m-d H:i:s') }}</td>
                                        
                        <td>{{ entity.publico }}</td>
                                        
                        <td>{{ entity.guid }}</td>
                    
    <td><a href="{{ path('admin_noticias_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i> Mostrar</a></td>
    <td><a href="{{ path('admin_noticias_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i> Editar</a></td>
    <td><a href="{{ path('admin_noticias_delete', { 'id': entity.id }) }}"><i class="fa fa-minus-circle"></i> Eliminar</a></td>

                </tr>
            </tbody>
        </table>
    </div>


    <ul class="pager">
        <li class="next"><a href="{{path('admin_noticias')}}"><i class="fa fa-list"></i>
                Listado de Noticia
            </a>
        </li>
    </ul>


    {% endblock %}
