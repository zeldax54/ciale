{% extends 'gemaBundle::layout.html.twig' %}

    {% block gema_page -%}
        <h2>Area</h2>

        <div class="table-responsive">
            <table class="record_properties table table-hover">
                <thead>
                <tr>                                                                <th>Titulo</th>

                    <th colspan="3">Acciones</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ entity.titulo }}</td>

                    <td><a href="{{ path('area_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i> Mostrar</a></td>
                    <td><a href="{{ path('area_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i> Editar</a></td>
                    <td><a href="{{ path('area_delete', { 'id': entity.id }) }}"><i class="fa fa-minus-circle"></i> Eliminar</a></td>

                </tr>
                </tbody>
            </table>
        </div>


        <ul class="pager">
            <li class="next"><a href="{{path('area')}}"><i class="fa fa-list"></i>
                    Listado de Area
                </a>
            </li>
        </ul>


    {% endblock %}
