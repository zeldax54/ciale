    {% extends 'gemaBundle::layout.html.twig' %}

    {% block gema_page -%}
    <h2>Comerciables</h2>

    <div class="table-responsive">
        <table class="record_properties table table-hover">
            <thead>
                <tr>                                                                <th>Guid</th>
                                                                    <th>Tipo</th>
                                                                    <th>Titulo</th>
                                                                    <th>Precio</th>
                                                                    <th>Descripcion</th>
                                                                    <th>Videos</th>
                        
                    <th colspan="3">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>                                        
                        <td>{{ entity.guid }}</td>
                                        
                        <td>{{ entity.tipo }}</td>
                                        
                        <td>{{ entity.titulo }}</td>
                                        
                        <td>{{ entity.precio }}</td>
                                        
                        <td>{{ entity.descripcion }}</td>
                                        
                        <td>{{ entity.videos }}</td>
                    
    <td><a href="{{ path('admin_comerciables_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i> Mostrar</a></td>
    <td><a href="{{ path('admin_comerciables_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i> Editar</a></td>
    <td><a href="{{ path('admin_comerciables_delete', { 'id': entity.id }) }}"><i class="fa fa-minus-circle"></i> Eliminar</a></td>

                </tr>
            </tbody>
        </table>
    </div>


    <ul class="pager">
        <li class="next"><a href="{{path('admin_comerciables')}}"><i class="fa fa-list"></i>
                Listado de Comerciables
            </a>
        </li>
    </ul>


    {% endblock %}
