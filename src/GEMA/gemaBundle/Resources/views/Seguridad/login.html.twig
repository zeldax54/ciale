{% extends '::base.html.twig' %}
{% block stylesheets %} 
    {{ parent() }}
    <link href="{{ asset('bundles/gema/css/pages/login.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
{% block background %}clouds{% endblock %}
{% block content %}
    
<div class="logo">
    <a href="{{ path("gema_login") }}">

    </a>
</div>
<section class="login_gema p-t-30">
    <!--<h3 class="form-title">Autenticación</h3>-->
    
    {% if error %}
        <div class="error">{{ error.message }}</div>
    {% endif %}
    <form action="{{ path("gema_login_check") }}" method="post" id="login">
        <div class="form-group">            
            <label class="control-label visible-ie8 visible-ie9">Usuario</label>
            <div class="input-icon">
                <i class="fa fa-user"></i>
                <input class="form-control placeholder-no-fix valid" type="text" autocomplete="off" placeholder="Usuario" id="username" name="_username" value="{{ last_username }}">
            </div>
           <!-- <span for="username" class="help-block">Username is required.</span> --> 
        </div>
        <div class="form-group">
            <label class="control-label visible-ie8 visible-ie9">Contraseña</label>
            <div class="input-icon">
                <i class="fa fa-lock"></i>
                <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Contraseña" id="password" name="_password">
            </div>
            <!-- <span for="password" class="help-block">Password is required.</span> -->
        </div>
        <div class="form-actions">			
            <button type="submit" class="btn btn-primary pull-right btn-block btn-lg"><i class="fa fa-sign-in"></i>
                Autenticar 
            </button>
        </div>
    </form>
</section>
<section class="copyright copyright_login">
CIALE &copy; {{ 'now' | date('Y') }}
</section>
    
   
{% endblock %}

