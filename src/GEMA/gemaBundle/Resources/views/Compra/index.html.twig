    {% extends 'gemaBundle::layout.html.twig' %}

    {% block gema_page -%}
    <h2>Listado de Compra</h2>
    {% if entities is empty %}
    <div class="bs-callout bs-callout-info">
        <i class="fa fa-info-circle img-responsive info_icon"></i>
        <h4>Aviso</h4>
        <p>No existen registros de activos en la base de datos.</p>
    </div>
    {% else %}

    <div class="table-responsive">
        <table class="record_properties table table-hover table table-striped table-vmiddle" id="data-table-command" data-ajax="true" data-url="{{path('compra')}}" >
            <thead>
                <tr>                                                                <th data-column-id="nombre">Nombre</th>
                                                                    <th data-column-id="apellido">Apellido</th>
                                                                    <th data-column-id="empresa">Empresa</th>
                                                                    <th data-column-id="localidad">Localidad</th>
                                                                    <th data-column-id="fecha" data-formatter="fecha">Fecha</th>
                                                                    <th data-column-id="provincia">Provincia</th>
                                                                    <th data-column-id="telefono">Telefono</th>
                                                                    <th data-column-id="email">Email</th>
                                                                    <th data-column-id="descuento">Descuento</th>
                        
                    <th colspan="3" data-formatter="commands">Acciones</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    {% endif %}



            <ul class="pager">
            <li class="next"><a href="{{ path('compra_new') }}"><i class="fa fa-plus-circle"></i>
                    Nuevo Compra
                </a></li>
        </ul>
        {% endblock %}

    {% block javascripts -%}
    {{ parent() }}
    <script>
        $("#data-table-command").bootgrid({
            css: {
                icon: 'md icon',
                iconColumns: 'md-view-module',
                iconDown: 'md-expand-more',
                iconRefresh: 'md-refresh',
                iconUp: 'md-expand-less'
            },
            formatters: {
                "commands": function(column, row) {
                    return "<a href='" + Routing.generate('compra_edit', {id: row.id}) + "'  class=\"btn btn-icon command-edit\" ><span class=\"md md-edit\"></span></a> " +
                            "<a href='" + Routing.generate('compra_delete', {id: row.id}) + "'  class=\"btn btn-icon command-delete\" ><span class=\"md md-delete\"></span></a>";
                },
                  "fecha": function(column, row) {
                    return "" + row.fecha.date.substring(0, 10);
                }
               /* ,
                "area": function(column, row) {
                    return "" + row.area.nombre;
                }*/
            }, templates: {
                loading: "<tr><td colspan='9' class=\"loading\"><div class='loading'><img src='{{ asset('bundles/gema/images/loading.gif') }}' class='img-responsive'></div></td></tr>"
            }
        });
    </script>
    {% endblock %}

